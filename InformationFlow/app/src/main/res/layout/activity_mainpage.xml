<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/colorBlue">

        <TextView
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="新闻热点"
            android:typeface="normal"
            android:textColor="@android:color/white"
            android:textSize="26sp" />
    </RelativeLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:id="@+id/tablayout"
        app:tl_indicator_corner_radius="2dp"
        app:tl_indicator_color="#2d8ced"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="16dp"
        app:tl_textSelectColor="#2d8ced"
        app:tl_textUnselectColor="#333333"
        app:tl_textsize="18sp"
        app:tl_tab_padding="15dp"
        ></com.flyco.tablayout.SlidingTabLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorView"></View>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewpager"></android.support.v4.view.ViewPager>

</LinearLayout>
